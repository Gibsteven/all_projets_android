<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:textColor="@color/white"
        android:layout_marginTop="-20dp"
        android:text="SmartChecking"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="30dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title1"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snap-Clic-Enregisté!"/>


    <RelativeLayout
        android:id="@+id/containe"
        android:layout_width="359dp"
        android:layout_height="203dp"
        android:layout_below="@+id/title1"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/box">

        <TextView
            android:id="@+id/stitle"
            android:text="Je me connecte"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/green"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/mail"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_below="@+id/stitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingLeft="12dp"
            android:background="@drawable/text_border"
            android:hint="Nom d'Utilisation,Email ou Téléphone"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/pw"
            android:layout_width="277dp"
            android:layout_height="30dp"
            android:layout_below="@+id/mail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingLeft="12dp"
            android:hint="Mot de Passe"
            android:background="@drawable/text_border"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_connect"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pw"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/green"
            android:text=" Se Connecter" />


    </RelativeLayout>

    <TextView
        android:id="@+id/sousT"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_below="@+id/containe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:text="En vous connectant vous acceptez"/>

    <TextView
        android:id="@+id/sousT1"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_below="@+id/sousT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:gravity="center"
        android:layout_marginEnd="40dp"
        android:text="les termes et politique de vie privée"/>

</RelativeLayout>